 <link rel="stylesheet" href="/css/certificate.css">

<div class="certificate-container">
  <div class="certificate">
    <div class="certificate-header">
      <h1>Certificate of Completion</h1>
    </div>
    <div class="certificate-content">
      <p class="presented">This certifies that</p>
      <h2 class="name"><%= user.firstName %> <%= user.lastName %></h2>
      <p class="completion">has successfully completed the course</p>
      <h3 class="course-title"><%= course.title %></h3>
      <p class="score">with a score of <%= score.toFixed(2) %>%</p>
      <p class="date">Issued on: <%= new Date().toLocaleDateString() %></p>
    </div>
    <div class="certificate-footer">
      <div class="signature">
        <div class="signature-line"></div>
        <p>Instructor Signature</p>
      </div>
      <div class="seal">
        <svg viewBox="0 0 100 100" width="100" height="100">
          <circle cx="50" cy="50" r="45" fill="none" stroke="#E63946" stroke-width="2"/>
          <text x="50" y="50" text-anchor="middle" dy=".3em" font-size="14">SEAL</text>
        </svg>
      </div>
    </div>
  </div>
  <a href="/download-certificate/<%= course._id %>" class="btn btn-primary">Download Certificate</a>
</div>